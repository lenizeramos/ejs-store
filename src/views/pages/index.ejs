<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs", { title: "Home" }) %>
  </head>
  <body>
    <header><%- include("../partials/header.ejs", {page: "home", style:"/css/home.css"}) %></header>
    <h1>Home</h1>
    <p>Welcome, <%= user.name %>!</p>
    <ul>
      <% products.forEach(product => { %>
          <li>
              <h2><%= product.title %></h2>
              <img src="<%= product.image %>" alt="<%= product.title %>">
          </li>
      <% }) %>
  </ul>
</body>
</html>